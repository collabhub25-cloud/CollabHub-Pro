# CollabHub Environment Configuration
# Copy this file to .env and update values for your environment

# =============================================================================
# DJANGO SETTINGS
# =============================================================================

# Generate a secure key: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=django-insecure-change-this-in-production-generate-new-key

# Debug mode (set to False in production)
DEBUG=True

# Allowed hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================================================
# DATABASE (Optional - defaults to SQLite)
# =============================================================================

# For PostgreSQL in production:
# DATABASE_URL=postgres://user:password@localhost:5432/collabhub

# =============================================================================
# CORS SETTINGS
# =============================================================================

# Comma-separated list of allowed origins
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# JWT SETTINGS
# =============================================================================

# Access token lifetime in minutes
JWT_ACCESS_TOKEN_LIFETIME=60

# Refresh token lifetime in days
JWT_REFRESH_TOKEN_LIFETIME=7

# =============================================================================
# EMAIL SETTINGS (Optional)
# =============================================================================

# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password
# EMAIL_USE_TLS=True
