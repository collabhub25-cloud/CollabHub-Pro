# CollabHub Environment Configuration
# Copy this file to .env and update values for your environment

# =============================================================================
# DJANGO SETTINGS - REQUIRED IN PRODUCTION
# =============================================================================

# Generate a secure key: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
# WARNING: This MUST be set in production - do NOT use the development default
SECRET_KEY=your-super-secret-key-generate-a-new-one

# Debug mode - MUST be False in production
DEBUG=False

# Allowed hosts (comma-separated, NO wildcards)
# Example: mysite.com,www.mysite.com,api.mysite.com
ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================================================
# DATABASE (Optional - defaults to SQLite)
# =============================================================================

# For PostgreSQL in production:
# DATABASE_URL=postgres://user:password@localhost:5432/collabhub

# =============================================================================
# CORS SETTINGS - CRITICAL FOR SECURITY
# =============================================================================

# Comma-separated list of allowed origins (NO wildcards)
# Include your frontend URL here
CORS_ALLOWED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000,http://localhost:3000

# =============================================================================
# JWT SETTINGS
# =============================================================================

# Separate signing key for JWT tokens (recommended for production)
# Generate: python -c "import secrets; print(secrets.token_urlsafe(64))"
JWT_SIGNING_KEY=your-jwt-signing-key-different-from-secret-key

# =============================================================================
# SSL/HTTPS SETTINGS (Enable in production)
# =============================================================================

# Force HTTPS redirect
SECURE_SSL_REDIRECT=False

# =============================================================================
# EMAIL SETTINGS (Optional - for password reset)
# =============================================================================

# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password
# EMAIL_USE_TLS=True
